<UserControl x:Class="Tests.Wpf.DesignTimeData.DesignTimeDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.DesignTimeData"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Tests.Wpf.Models"
             xmlns:project="clr-namespace:Tests.Wpf"
             xmlns:system="clr-namespace:System.Collections.Generic;assembly=netstandard"
             d:DataContext="{d:DesignData Type=local:DesignTimeDataViewModel,
                                          IsDesignTimeCreatable=True}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <ListView ItemsSource="{Binding Path=Items}">
                <d:ListView.ItemsSource>
                    <x:Array Type="{x:Type models:SampleItem}">
                        <models:SampleItem Name="Hello"
                                           Address="World"
                                           Gender="False"
                                           Id="1" />
                    </x:Array>
                </d:ListView.ItemsSource>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock d:Text="{Binding Address}" Text="{Binding Address}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <DataGrid AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      ItemsSource="{Binding Path=Items}">
                <d:DataGrid.ItemsSource>
                    <x:Array Type="{x:Type models:SampleItem}">
                        <models:SampleItem Name="Hello"
                                           Address="World"
                                           Gender="False"
                                           Id="1" />
                    </x:Array>
                </d:DataGrid.ItemsSource>
                <DataGrid.Columns>
                    <DataGridTextColumn d:Binding="{Binding Id}"
                                        Binding="{Binding Id}"
                                        Header="Id" />
                    <DataGridTextColumn d:Binding="{Binding Name}"
                                        Binding="{Binding Name}"
                                        Header="Name" />
                    <DataGridTextColumn d:Binding="{Binding Address}"
                                        Binding="{Binding Address}"
                                        Header="Address" />
                    <DataGridCheckBoxColumn d:Binding="{Binding Gender}"
                                            Binding="{Binding Gender}"
                                            Header="Gender" />
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid d:ItemsSource="{x:Static project:DesignTimeDataSource.Samples}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      ItemsSource="{x:Static project:DesignTimeDataSource.Samples}">

                <DataGrid.Columns>
                    <DataGridTextColumn d:Binding="{Binding Id}"
                                        Binding="{Binding Id}"
                                        Header="Id" />
                    <DataGridTextColumn d:Binding="{Binding Name}"
                                        Binding="{Binding Name}"
                                        Header="Name" />
                    <DataGridTextColumn d:Binding="{Binding Address}"
                                        Binding="{Binding Address}"
                                        Header="Address" />
                    <DataGridCheckBoxColumn d:Binding="{Binding Gender}"
                                            Binding="{Binding Gender}"
                                            Header="Gender" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
