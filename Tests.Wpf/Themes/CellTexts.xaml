<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Tests.Wpf.Controls">
    <Style TargetType="{x:Type controls:CellTexts}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CellTexts}">
                    <StackPanel HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Value, StringFormat={}{0:N2}, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                        <Grid Width="{TemplateBinding Gap}" />
                        <TextBlock Text="{Binding Path=Unit, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>