<Window x:Class="Tests.Wpf.Controls.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Tests.Wpf.Controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MessageBox"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance Type=local:MessageBox}"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock Margin="{StaticResource ThicknessMedium}"
                       Text="{Binding Caption}"
                       TextAlignment="Justify"
                       TextWrapping="WrapWithOverflow" />
        </Grid>

        <Border Grid.Row="1">
            <DockPanel Margin="{StaticResource ThicknessMedium}" HorizontalAlignment="Right">
                <Button Command="{Binding ButtonCommand}"
                        CommandParameter="{x:Static local:MessageBox.CONFIRM}"
                        Content="{Binding ConfirmText}"
                        Visibility="{Binding ConfirmText, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                <Button Margin="{StaticResource ThicknessSmallLeft}"
                        Command="{Binding ButtonCommand}"
                        CommandParameter="{x:Static local:MessageBox.REFUSE}"
                        Content="{Binding RefuseText}"
                        Visibility="{Binding RefuseText, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                <Button Margin="{StaticResource ThicknessSmallLeft}"
                        Command="{Binding ButtonCommand}"
                        CommandParameter="{x:Static local:MessageBox.CANCEL}"
                        Content="{Binding CancelText}"
                        Visibility="{Binding CancelText, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
            </DockPanel>
        </Border>
    </Grid>
</Window>
