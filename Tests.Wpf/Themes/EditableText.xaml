<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Tests.Wpf.Controls">
    <Style TargetType="{x:Type controls:EditableText}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:EditableText}">
                    <Grid>
                        <TextBlock x:Name="PART_TextBlock" Text="{Binding Path=Text, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                        <TextBox x:Name="PART_TextBox"
                                 Text="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                 Visibility="Collapsed">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding Path=RenameFinishedCommand, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEditing" Value="True">
                            <Setter TargetName="PART_TextBlock" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_TextBox" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_TextBox" Property="FocusManager.FocusedElement" Value="{Binding RelativeSource={RelativeSource Self}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>