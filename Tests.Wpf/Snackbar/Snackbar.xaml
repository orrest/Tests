<UserControl x:Class="Tests.Wpf.Snackbar.Snackbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Snackbar"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="root"
             MinHeight="68"
             Margin="24"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Bottom"
             Focusable="False"
             KeyboardNavigation.IsTabStop="False"
             SnapsToDevicePixels="True"
             mc:Ignorable="d">
    <Grid>
        <Border x:Name="card"
                MinHeight="{Binding ElementName=root, Path=MinHeight}"
                Padding="12"
                VerticalAlignment="Bottom"
                Background="{Binding ElementName=root, Path=Record.Background}"
                CornerRadius="4">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                                  Direction="0"
                                  Opacity="0.4"
                                  ShadowDepth="0"
                                  Color="#202020" />
            </Border.Effect>
            <DockPanel>
                <TextBlock VerticalAlignment="Center"
                           DockPanel.Dock="Left"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="28"
                           Foreground="{Binding ElementName=root, Path=Record.Foreground}"
                           Text="{Binding ElementName=root, Path=Record.Icon}" />

                <StackPanel Margin="24,0,0,0" DockPanel.Dock="Left">
                    <TextBlock Margin="0"
                               FontWeight="SemiBold"
                               Foreground="{Binding ElementName=root, Path=Record.Foreground}"
                               Text="{Binding ElementName=root, Path=Record.Title}" />

                    <TextBlock Foreground="{Binding ElementName=root, Path=Record.ContentForeground}"
                               Text="{Binding ElementName=root, Path=Record.Message}"
                               TextWrapping="WrapWithOverflow" />
                </StackPanel>

                <Button Padding="6"
                        HorizontalAlignment="Right"
                        Background="{Binding ElementName=root, Path=Record.Background}"
                        Command="{Binding ElementName=root, Path=CloseButtonCommand, Mode=OneWay}"
                        DockPanel.Dock="Right">
                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                               Foreground="{Binding ElementName=root, Path=Record.ContentForeground}"
                               Text="&#xE711;" />
                </Button>
            </DockPanel>
        </Border>
    </Grid>
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="SnackbarStates">
            <VisualState x:Name="Shown">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0.0"
                                     To="1.0"
                                     Duration="0:0:0.3" />
                </Storyboard>
            </VisualState>
            <VisualState x:Name="Hidden">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="1.0"
                                     To="0.0"
                                     Duration="0:0:0.3" />
                </Storyboard>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</UserControl>
