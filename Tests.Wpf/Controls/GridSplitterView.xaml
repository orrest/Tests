<UserControl x:Class="Tests.Wpf.Controls.GridSplitterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=local:GridSplitterViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <TextBlock>
            <Hyperlink NavigateUri="https://learn.microsoft.com/en-us/dotnet/desktop/wpf/controls/how-to-resize-columns-with-a-gridsplitter" RequestNavigate="Hyperlink_RequestNavigate">
                How to: Resize Columns with a GridSplitter
            </Hyperlink>
        </TextBlock>


        <StackPanel Height="120">
            <Label Content="GridSplitter that overlays the edge of a column" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="0"
                           Height="120"
                           Background="AliceBlue" />
                <GridSplitter Grid.Column="1"
                              Width="3"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Stretch"
                              Panel.ZIndex="99"
                              Background="Black"
                              ShowsPreview="False" />
                <DockPanel Grid.Column="1"
                           Height="120"
                           Background="Bisque" />
            </Grid>
        </StackPanel>

        <StackPanel Height="120">
            <Label Content="GridSplitter that occupies a column" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="7*" />
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="0"
                           Height="120"
                           Background="AliceBlue" />
                <GridSplitter Grid.Column="1"
                              Width="3"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Panel.ZIndex="99"
                              Background="Black"
                              ShowsPreview="False" />
                <DockPanel Grid.Column="2"
                           Height="120"
                           Background="Bisque" />
            </Grid>
        </StackPanel>

        <StackPanel Height="120">
            <Label Content="Try to find the bug in code :)" Foreground="Red" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="0"
                           Height="120"
                           Background="AliceBlue" />
                <GridSplitter Grid.Column="1"
                              Width="3"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Stretch"
                              Panel.ZIndex="99"
                              Background="Black"
                              ShowsPreview="False" />
                <DockPanel Grid.Column="2"
                           Height="120"
                           Background="Bisque" />
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
