<UserControl x:Class="Tests.Wpf.Border.BorderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Border"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Foreground="AntiqueWhite"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Background="LightCoral">
            <GroupBox Header="BorderThickness = 5, Padding = 5">
                <Border Padding="5"
                        Background="DarkGreen"
                        BorderBrush="Aqua"
                        BorderThickness="5">
                    <TextBlock Margin="0"
                               Padding="0"
                               Background="DarkOrange"
                               Text="Some text" />
                </Border>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="BorderThickness = 5, Padding = 0">
                <Border Background="DarkGreen"
                        BorderBrush="Aqua"
                        BorderThickness="5">
                    <TextBlock Margin="0"
                               Padding="0"
                               Background="DarkOrange"
                               Text="Some text" />
                </Border>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="BorderThickness = 5, TextBlock Margin = 5">
                <Border Background="DarkGreen"
                        BorderBrush="Aqua"
                        BorderThickness="5">
                    <TextBlock Margin="5"
                               Padding="0"
                               Background="DarkOrange"
                               Text="Some text" />
                </Border>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="BorderThickness = 5, TextBlock Margin = 0">
                <Border Background="DarkGreen"
                        BorderBrush="Aqua"
                        BorderThickness="5">
                    <TextBlock Margin="0"
                               Padding="0"
                               Background="DarkOrange"
                               Text="Some text" />
                </Border>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="BorderThickness = 5, Padding = 5, TextBlock Margin = 5">
                <Border Padding="5"
                        Background="DarkGreen"
                        BorderBrush="Aqua"
                        BorderThickness="5">
                    <TextBlock Margin="5"
                               Padding="0"
                               Background="DarkOrange"
                               Text="Some text" />
                </Border>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="BorderThickness = 5, Padding = 5, TextBlock Margin = 5, TextBlock Padding = 5">
                <Border Padding="5"
                        Background="DarkGreen"
                        BorderBrush="Aqua"
                        BorderThickness="5">
                    <TextBlock Margin="5"
                               Padding="5"
                               Background="DarkOrange"
                               Text="Some text" />
                </Border>
            </GroupBox>

            <TextBlock Margin="10"
                       Text="When use Border, the border's padding, border thickness, content margin, content padding will all work."
                       TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
