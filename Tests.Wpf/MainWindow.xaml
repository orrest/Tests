<Window x:Class="Tests.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Tests.Wpf.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Tests.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Tests.Wpf.Models"
        Title="MainWindow"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView Grid.Column="0"
                  BorderBrush="LightGray"
                  ItemsSource="{Binding Path=ViewItems}"
                  SelectedItem="{Binding Path=SelectedView}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="models:ViewItem">
                    <TextBlock Text="{Binding Path=Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border Grid.Column="1"
                BorderBrush="LightGray"
                BorderThickness="1">
            <ContentControl Content="{Binding SelectedView.Instance}" />
        </Border>

        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="{Binding Path=ToastMessage}" />

        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Command="{Binding Path=ShowProgressMaskCommand, Mode=OneWay}" Content="Show progress mask" />
            <Button Command="{Binding Path=ShowMaskThenManuallyCancelIterationCommand, Mode=OneWay}" Content="Show Mask Then Manually Cancel Iteration" />
        </StackPanel>

        <controls:ProgressMask Grid.Row="0"
                               Grid.Column="1"
                               Panel.ZIndex="99"
                               CancellationText="Cancel"
                               Visibility="Collapsed" />
    </Grid>
</Window>
