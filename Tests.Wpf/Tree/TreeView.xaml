<UserControl x:Class="Tests.Wpf.Tree.TreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Tests.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Tree"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:TreeViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <Grid>
        <TabControl>
            <TabItem Header="ContextMenu in HierarchicalDataTemplate">
                <TreeView ItemsSource="{Binding Roots}">
                    <TreeView.Resources>
                        <!--  Root  -->
                        <HierarchicalDataTemplate DataType="{x:Type local:RootViewModel}" ItemsSource="{Binding Children}">
                            <Grid>
                                <Grid.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Command="{Binding AddChildCommand}" Header="Add Child" />
                                        <MenuItem Command="{Binding EnterRenameStateCommand}" Header="Rename" />
                                    </ContextMenu>
                                </Grid.ContextMenu>
                                <TextBlock x:Name="PART_TextBlock" Text="{Binding Name, Mode=OneWay}" />
                                <TextBox x:Name="PART_TextBox"
                                         Text="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                         Visibility="Collapsed">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Return" Command="{Binding ExitRenameStateCommand}" />
                                    </TextBox.InputBindings>
                                </TextBox>
                            </Grid>
                            <HierarchicalDataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter TargetName="PART_TextBlock" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="PART_TextBox" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_TextBox" Property="FocusManager.FocusedElement" Value="{Binding RelativeSource={RelativeSource Self}}" />
                                </DataTrigger>
                            </HierarchicalDataTemplate.Triggers>
                        </HierarchicalDataTemplate>


                        <!--  Child  -->
                        <HierarchicalDataTemplate DataType="{x:Type local:ChildViewModel}" ItemsSource="{Binding Children}">
                            <Border HorizontalAlignment="Stretch" Background="Transparent">
                                <Border.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Command="{Binding AddLeafCommand}" Header="Add Leaf" />
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <TextBlock HorizontalAlignment="Stretch" Text="{Binding Name, Mode=OneWay}" />
                            </Border>
                        </HierarchicalDataTemplate>

                        <!--  Leaf  -->
                        <DataTemplate DataType="{x:Type local:LeafViewModel}">
                            <TextBlock Text="{Binding Name, Mode=OneWay}">
                                <TextBlock.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Command="{Binding OpenCommand}" Header="Open" />
                                        <MenuItem Command="{Binding DeleteCommand}" Header="Delete Leaf" />
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </TabItem>

            <TabItem Header="ContextMenu in TreeViewItem Style">
                <TreeView ItemsSource="{Binding Roots}" SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.Resources>
                        <!--  Root  -->
                        <HierarchicalDataTemplate DataType="{x:Type local:RootViewModel}" ItemsSource="{Binding Children}">
                            <controls:EditableText Command="{Binding AfterRenameCommand}"
                                                   IsEditing="{Binding IsEditing}"
                                                   Text="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                        </HierarchicalDataTemplate>

                        <!--  Child  -->
                        <HierarchicalDataTemplate DataType="{x:Type local:ChildViewModel}" ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Name, Mode=OneWay}" />
                        </HierarchicalDataTemplate>

                        <!--  Leaf  -->
                        <DataTemplate DataType="{x:Type local:LeafViewModel}">
                            <TextBlock Text="{Binding Name, Mode=OneWay}" />
                        </DataTemplate>
                    </TreeView.Resources>

                    <TreeView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource {x:Type TreeViewItem}}" TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Converter={StaticResource IsTypeConverter}, ConverterParameter={x:Type local:RootViewModel}}" Value="True">
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                                <MenuItem Command="{Binding AddChildCommand}" Header="New Child" />
                                                <MenuItem Command="{Binding EnterRenameStateCommand}" Header="Rename (customized control)" />
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Converter={StaticResource IsTypeConverter}, ConverterParameter={x:Type local:ChildViewModel}}" Value="True">
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                                <MenuItem Command="{Binding AddLeafCommand}" Header="New Leaf" />
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Converter={StaticResource IsTypeConverter}, ConverterParameter={x:Type local:LeafViewModel}}" Value="True">
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                                <MenuItem Command="{Binding OpenCommand}" Header="Open" />
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>

            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
