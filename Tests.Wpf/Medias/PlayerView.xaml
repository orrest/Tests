<UserControl x:Class="Tests.Wpf.Medias.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Medias"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=local:PlayerViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <Button Command="{Binding Path=PlayCommand}" Content="Playlist Callback" />
        <Button Command="{Binding Path=Play1Command}" Content="Playlist Async" />
        <Button Command="{Binding Path=ResetCommand}" Content="Reset" />
    </StackPanel>
</UserControl>
