<UserControl x:Class="Tests.Wpf.Themes.StylePriorityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>
            <StackPanel.Resources>
                <Style x:Key="header1" TargetType="{x:Type TextBlock}">
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Purple" />
                    <Setter Property="Margin" Value="0,20,0,5" />
                </Style>
            </StackPanel.Resources>
            <!--  Non-key style  -->
            <TextBlock Style="{StaticResource header1}" Text="Base style without a key:" />
            <StackPanel>
                <StackPanel.Resources>
                    <ResourceDictionary>
                        <Style TargetType="TextBlock">
                            <Setter Property="Background" Value="LightBlue" />
                            <Setter Property="Padding" Value="0,10" />
                            <Setter Property="FontWeight" Value="Light" />
                        </Style>
                        <Style x:Key="ControlTextBlockStyle1" TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="ExtraBold" />
                        </Style>
                        <Style x:Key="ControlTextBlockStyle2"
                               BasedOn="{StaticResource {x:Type TextBlock}}"
                               TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="ExtraBold" />
                        </Style>
                    </ResourceDictionary>
                </StackPanel.Resources>
                <TextBlock Text="Style without key will auto applied to the control with the same control type." />
                <TextBlock Style="{StaticResource ControlTextBlockStyle1}" Text="Style does not specified the x:key specifically will not inherit the non-key style." />
                <TextBlock Style="{StaticResource ControlTextBlockStyle2}" Text="Style without key will apply the style when specified the BasedOn of type-key." />
            </StackPanel>

            <!--  Keyed style  -->
            <TextBlock Style="{StaticResource header1}" Text="Base style with x:Type as a key:" />
            <StackPanel>
                <StackPanel.Resources>
                    <ResourceDictionary>
                        <Style x:Key="{x:Type TextBlock}" TargetType="TextBlock">
                            <Setter Property="Background" Value="LightCoral" />
                            <Setter Property="Padding" Value="0,10" />
                            <Setter Property="FontWeight" Value="Light" />
                        </Style>
                        <Style x:Key="ControlTextBlockStyle1" TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="ExtraBold" />
                        </Style>
                        <Style x:Key="ControlTextBlockStyle2"
                               BasedOn="{StaticResource {x:Type TextBlock}}"
                               TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="ExtraBold" />
                        </Style>
                    </ResourceDictionary>
                </StackPanel.Resources>
                <TextBlock Text="Style with a type key will auto applied to the control with the same control type." />
                <TextBlock Style="{StaticResource ControlTextBlockStyle1}" Text="Style does not specified the x:key specifically will not inherit the type-key style." />
                <TextBlock Style="{StaticResource ControlTextBlockStyle2}" Text="Style with a type-key will apply the style when specified the BasedOn of type-key." />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
