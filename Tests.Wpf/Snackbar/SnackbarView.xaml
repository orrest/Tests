<UserControl x:Class="Tests.Wpf.Snackbar.SnackbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Snackbar"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=local:SnackbarViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <ComboBox ItemsSource="{Binding Path=Levels}" SelectedItem="{Binding Path=SelectedLevel}" />
        <ComboBox ItemsSource="{Binding Path=TimeSpans}" SelectedItem="{Binding Path=SelectedSpan}" />

        <Button Command="{Binding Path=ShowSnackbarCommand}" Content="Show snackbar" />
        <TextBlock Text="{Binding Path=ElapsedSeconds}" />
    </StackPanel>
</UserControl>
