<UserControl x:Class="Tests.Wpf.CustomizedMessageBox.MessageBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.CustomizedMessageBox"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:MessageBoxViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <Button Command="{Binding CreateOnNonUiThreadCommand}" Content="CAN'T CREATE ON NON-UI THREAD" />
        <Button Command="{Binding CreateOnUiThreadButSetPropertiesOnNonUiThreadCommand}" Content="CAN'T SET ON NON-UI THREAD" />
        <Button Command="{Binding SetOnUiThreadAndContinueOnNonUiThreadCommand}" Content="CAN'T SHOW ON NON-UI THREAD" />
        <Button Command="{Binding ShowOnUiThreadAndContinueOnNonUiThreadCommand}" Content="SHOW ON UI THREAD, AND CONTINUE ON NON-UI THREAD" />
    </StackPanel>
</UserControl>
