<UserControl x:Class="Tests.Wpf.Controls.CustomizedTabItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=local:CustmizedTabItemViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <TabControl Height="200">
            <TabItem Header="Too wide...">
                <TextBlock Text="The default style" />
            </TabItem>
            <TabItem Width="130" Header="Modify the width">
                <TextBlock Text="The up-right corner seems not right..." />
            </TabItem>
            <TabItem Header="Modified the style" Style="{StaticResource AppTabItem}">
                <TextBlock Text="Now the up-right corner is correct." />
            </TabItem>
        </TabControl>
    </StackPanel>
</UserControl>
