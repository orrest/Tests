<UserControl x:Class="Tests.Wpf.Controls.VisibilityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tests.Wpf.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:VisibilityViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <StackPanel Background="Yellow">
            <TextBlock Text="Something before this" />
            <TextBlock Text="Something before this" />
            <TextBlock Text="Something before this" />
        </StackPanel>

        <StackPanel Background="PaleVioletRed">
            <TextBlock Text="Sometimes you can see me in a StackPanel" Visibility="{Binding Path=IsVisible, Converter={StaticResource ResourceKey=BooleanToVisibilityConverter}}" />
        </StackPanel>
        <DockPanel Background="AliceBlue">
            <TextBlock Text="Sometimes you can see me in a DockPanel" Visibility="{Binding Path=IsVisible, Converter={StaticResource ResourceKey=BooleanToVisibilityConverter}}" />
        </DockPanel>
        <Grid Background="LightGreen">
            <TextBlock Text="Sometimes you can see me in a Gird" Visibility="{Binding Path=IsVisible, Converter={StaticResource ResourceKey=BooleanToVisibilityConverter}}" />
        </Grid>

        <StackPanel Background="Yellow">
            <TextBlock Text="Something after this" />
            <TextBlock Text="Something after this" />
            <TextBlock Text="Something after this" />
        </StackPanel>

        <Button Command="{Binding Path=ChangeVisibilityCommand}" Content="Change Visibility" />

        <StackPanel Background="Yellow">
            <TextBlock Text="Something at the end" />
            <TextBlock Text="Something at the end" />
            <TextBlock Text="Something at the end" />
        </StackPanel>
    </StackPanel>
</UserControl>
